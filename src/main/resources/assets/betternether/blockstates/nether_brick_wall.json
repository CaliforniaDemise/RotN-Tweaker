{
    "multipart": [
        {   "when": { "up": "true" },
            "apply": { "model": "betternether:nether_brick_post" }
        },
        {   "when": { "north": "true" },
            "apply": { "model": "betternether:nether_brick_wall_ns", "uvlock": true }
        },
        {   "when": { "east": "true" },
            "apply": { "model": "betternether:nether_brick_wall_ew", "y": 90, "uvlock": true }
        },
        {   "when": { "south": "true" },
            "apply": { "model": "betternether:nether_brick_wall_ns", "y": 180, "uvlock": true }
        },
        {   "when": { "west": "true" },
            "apply": { "model": "betternether:nether_brick_wall_ew", "y": 270, "uvlock": true }
        }
    ]
}
